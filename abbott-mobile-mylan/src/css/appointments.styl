.appointments
  .col
    &:nth-of-type(1)
      width 12%
    &:nth-of-type(2)
      width 13%
    &:nth-of-type(3)
      width 14%
    &:nth-of-type(4)
      width 12%
    &:nth-of-type(5)
      width 25%
    &:nth-of-type(6)
      width 11%
    &:nth-of-type(7)
      width 13.5%

  &.today:not(.trade-off)
    .col
      &:nth-of-type(4)
        width 7%
      &:nth-of-type(5)
        width 24%
      &:nth-of-type(7)
        width 11.5%
      &:nth-of-type(8)
        width 8%

  &.today.trade-off
    .col
      &:nth-of-type(8)
        display none

  .thead
    .col
      &:nth-of-type(1)
        padding-right 2.5%

  .promotions-info.hidden
    .info
      display none