// variables
$header-height = 3.8em
// end of variables
.home .ordinary-header,
.ordinary-header
  display -webkit-box
  box-sizing border-box
  padding 0 5px
  -webkit-box-align center
  -webkit-transform translate3d(0,0,0)
  width 100%
  height $header-height
  overflow hidden
  -webkit-box-flex 0
  background-color #F7F7F7

  .select-btn
    box()
    margin 0 5px
    height 2.4em
    min-width 16em
    box-sizing border-box
    font-size 90%
    text-overflow none
    line-height 1em

.ordinary-header > *
  cbox()
  height 2.4em

.ordinary-header
  > .title
    -webkit-box-align stretch

.left-controls
.right-controls
  -webkit-box-flex 1
  display none

  &.show
    display -webkit-box

.title
  -webkit-box-flex 100
  padding 0 3px
  margin 0
  overflow hidden
  height 1.4em
  font-size 1.4em
  -webkit-line-clamp 1
  -webkit-box-orient vertical
  word-break break-all
  font-weight bold
  text-overflow ellipsis
  text-align center
  text-transform capitalize

.back
  position relative
  -webkit-box-flex 1
  padding-left 20px
  margin-right 5px
  color #21B4F3
  min-width 3em
  -webkit-box-pack start

  &:active
    opacity 0.8

  &:after
  &:before
    position absolute
    display block
    content ''
    left 7px
    top 50%
    margin-top -1px
    width 10px
    height 2px
    background-color #21B4F3
    -webkit-transform-origin 0 50%

  &:after
    -webkit-transform rotate(50deg)

  &:before
    -webkit-transform rotate(-50deg)


body.android
  .ordinary-header
    .back
      display none


.ctrl-btn
  position relative
  -webkit-border-radius 4px
  margin 0 5px
  height 100%
  cbox()
  width 8em
  background-color #21B4F3
  color white
  text-align center
  text-transform capitalize
  line-height 1

  &:active
    opacity 0.8

	&.disabled
		pointer-events none
		opacity 0.5

.ctrl-add-button
  position relative
  cbox()
  -webkit-box-shadow inset 0 0 0 2px #21B4F3
  height 2.4em
  width 2.4em
  border-radius 50%
  margin-left 15px
  background -webkit-linear-gradient(top, #21B4F3 0%, #21B4F3 100%) center center no-repeat, -webkit-linear-gradient(top, #21B4F3 0%, #21B4F3 100%) center center no-repeat
  -webkit-background-size 2px 50%, 50% 2px
  -webkit-transform scale3d(0.9, 0.9, 1)

  &:active
    opacity 0.8

.ctrl-date-time
  display -webkit-box
  height 100%

.header-date-time-title
.header-date-time-value
.header-date-time-calendar
  color #87878c
  height 100%
  margin 0 2px
  cbox()
  text-align center

.header-date-time-calendar.bit-button.calendar
  width 2.4em
  height 2.4em
  background-size 74%

.dynamic-agenda-btn
  position relative
  background-color #21B4F3
  -webkit-border-radius 4px
  width 2.4em
  height 2.4em
  margin 0 5px

  &:active
    opacity 0.8

  &:after
    content ''
    position absolute
    left 0.2em
    top 0.2em
    -webkit-mask-image url("img/home/menu-icons.png")
    -webkit-mask-repeat no-repeat
    -webkit-mask-size cover
    -webkit-mask-position-x 60%
    background-color white
    width 2em
    height 2em
