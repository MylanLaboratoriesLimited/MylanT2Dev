.promotion-tasks > div
  height 100%
  position relative


.promotion-tasks
  .card-table
    .name
      white-space nowrap
      -webkit-line-clamp 1
      text-align center

    &.header-table
      position absolute
      left 0
      right 0
      top 0
      height 3.5em

      thead
        background-color #949498
      th
        color white
        width 40%
        &:first-of-type
          width 60%

    .disabled
      opacity 1
      pointer-events none

      input.placeholder-mode
        color transparent !important

      .btn-select
        border-color rgba(0, 0, 0, 0.2)
        background-color rgba(0, 0, 0, 0.04)
        color #808080
        &:after
          border-color transparent

  .scroll-container
    position absolute
    left 0
    right 0
    top 3.5em
    bottom 0

    .scroll-content
      border-top 1px solid rgba(0, 0, 0, 0.05)
      border-bottom 1px solid rgba(0, 0, 0, 0.05)

    td
      color #87878C
      width 40%
      &:first-of-type
        width 60%

      .name
        white-space nowrap
        -webkit-line-clamp 1
        text-align left
        padding-left 15px
        -webkit-box-align start

      .value
        display -webkit-box
        -webkit-box-align center
        -webkit-box-pack center



