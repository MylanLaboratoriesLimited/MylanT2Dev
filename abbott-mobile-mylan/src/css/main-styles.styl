#abbottMobile
  overflow hidden

  .placeholder-mode
  .placeholder
    color #bdbdbd

*
  margin 0
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  -webkit-user-select none

html
  width 100%
  height 100%
  overflow hidden

body
  width 100%
  height 100%
  color #222
  overflow hidden
  font-family 'Roboto', sans-serif

ul
  list-style none
  display block
  padding 0
  margin 0

li
  list-style-type none

input
  -webkit-user-select auto

.float-none
  float none
  clear both

.stack-page:not(.active)
  display none

.stack-page
  position absolute
  top 0
  left 0
  right 0
  bottom 0

table
  th
    font-weight 500

.ellipsis
  display -webkit-box
  -webkit-box-orient vertical
  text-overflow ellipsis
  -webkit-line-clamp 2
  overflow hidden
  word-break break-word

body
  font-size 15px

@media screen and (max-height: 320px)
  body
    font-size 10px

@media screen and (min-height: 321px) and (max-height: 400px)
  body
    font-size 11px

@media screen and (min-height: 401px) and (max-height: 500px)
  body
    font-size 12px

@media screen and (min-height: 501px) and (max-height: 600px)
  body
    font-size 13px

@media screen and (min-height: 601px) and (max-height: 700px)
  body
    font-size 14px

@media screen and (min-height: 701px) and (max-height: 768px)
  body
    font-size 15px

@media screen and (min-height: 769px)
  body
    font-size 15px

.showing-popup
  .main-stack
    pointer-events none

.app
.stack-page
  width 100%
  height 100%

.overlay-container
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 1000
  pointer-events none
  -webkit-transform translate3d(0, 0, 1px)

  .overlay
    background-color black
    opacity 0.5
    height 100%
    width 100%

  .spinner-container
    position absolute
    top 50%
    left 50%

.scroll-content
  display -webkit-box
  -webkit-box-orient vertical
  width 100%

.android
  .scroll-content
    position relative
    overflow-x hidden

.scroll-container
  position relative;
  overflow auto
  overflow-x hidden
  -webkit-overflow-scrolling touch

.android
  .scroll-container
    -webkit-transform translate3d(0, 0, 1px)

.android.popup-mode .scroll-container
  -webkit-transform none

/* ANDROID SCROLLBAR*/
.android
  ::-webkit-scrollbar
    width 5px

  ::-webkit-scrollbar-track
    border-radius 10px

  ::-webkit-scrollbar-thumb
    border-radius 10px
    background rgb(169,169,169)

  ::-webkit-scrollbar-thumb:window-inactive
    background rgb(128,128,128)

  .info-table
    -webkit-box-sizing border-box
    // padding-right 5px

  .scroll-content .info-table
    background none
    padding-right 0

  .content-has-scroll
    padding-right 5px

.description
textarea
  display block
  -webkit-box-appearance none
  -webkit-user-select auto
  word-break break-all

  &.disabled
    pointer-events none

  &.with-shadow
    border 1px solid darkgray
    -webkit-box-shadow inset 0 1px 10px 0 rgba(0, 0, 0, 0.2)

  &:active,
  &:focus
    outline 2px solid coral

.popup-overflow
  background rgba(0,0,0,0.4)
  position absolute
  z-index 11
  top 0
  bottom 0
  left 0
  right 0

.red
  background #fe5950

.hide
  display none !important

.panel.full-screen
  bottom 0


.top-panel
    position relative
    display -webkit-box
    -webkit-box-align center
    background #f0eff4
    padding 5px 20px 5px 10px

  .full-screen-btn
      position absolute
      top 0
      left 0
      background transparent
      height 100%
      width 60px
      padding 0
      margin 0
      border 0
      z-index 999

  .full-screen-icon
    width 30px
    height 30px
    background #21b4f3
    border none
    border-radius 50%
    position relative
    margin 0 10px 0 5px
    display block

    &:after
      content ''
      position absolute
      right 9px
      top 11px
      display block
      width 10px
      height 10px
      border-right 2px solid #fff
      border-top 2px solid #fff
      -webkit-transform rotate(315deg)

.full-screen-mode
  .top-panel
    .full-screen-icon
      &:after
        top 7px
        -webkit-transform rotate(133deg)
