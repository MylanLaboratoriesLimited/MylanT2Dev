.notes > div
  height 100%
  position relative

.notes
  .card-table
    .name
      white-space nowrap
      -webkit-line-clamp 1
      text-align center

    &.header-table
      position absolute
      left 0
      right 0
      top 0
      height 3.5em

      thead
        background-color #949498
      th
        color white
        width 19%
        &:nth-of-type(1)
          width 4%
        &:nth-of-type(3)
          width 40%

  .scroll-container
    position absolute
    left 0
    right 0
    top 3.5em
    bottom 0

    .scroll-content
      border-top 1px solid rgba(0, 0, 0, 0.05)
      border-bottom 1px solid rgba(0, 0, 0, 0.05)

    td
      color #87878C
      text-align center
      width 19%
      &:nth-of-type(1)
        width 4%
        padding 0
        .check-box
          margin 0 auto
      &:nth-of-type(3)
        width 40%
        text-align left

    .progress-bar-holder
      display -webkit-box
      -webkit-box-align center

      .title-label
        display -webkit-box
        -webkit-box-flex 1
        width 40%
        -webkit-box-orient vertical
        overflow hidden
        -webkit-line-clamp 2
        word-break break-all

      .progress-bar
        display -webkit-box
        -webkit-box-flex 1
        width 60%
        -webkit-box-align center
        .progress-fill-wrapper
          width 80%
          margin-top 0.25em
        .progress-value
          font-size 100%
          margin 0 0 0 7px
      &.in-progress
        .title-label
          width 49%
          white-space nowrap
          text-overflow ellipsis
          overflow hidden

    .attached-by
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-box-pack justify
      -webkit-box-align center
      overflow hidden
      -webkit-line-clamp 2
