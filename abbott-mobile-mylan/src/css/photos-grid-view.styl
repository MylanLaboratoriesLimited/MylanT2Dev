.photos-grid-view
  padding 2%
  box-sizing border-box

  &.scroll-container
    position absolute

  .photos-list
    padding 0 1%

  li
    display inline-block
    width 17.7%
    padding 6.65% 0
    margin 2% 1%
    position relative
    border 1px solid gray
    background-color rgba(0, 0, 0, 0.2)
    background-position center
    background-size contain
    background-repeat no-repeat

    button
      position absolute
    .progress-holder
      position absolute
      top 0
      left 0
      right  0
      bottom 0
      display none
      -webkit-box-pack center
      -webkit-box-align center
      .progress-bar
        width 93%
        display -webkit-box
        -webkit-box-align center
        -webkit-box-pack justify
        .progress-fill-wrapper
          width 76%
          margin-top 2px
        .progress-value
          font-size 100%
          color #fff
          margin-top 0
    &.in-progress
      pointer-events none
      .progress-holder
        display -webkit-box

  .take-photo
    background-color transparent

    &.disabled
      background-color rgba(0,0,0, 0.1)

    &:active
      background-color rgba(0,0,0, 0.05)

    button
      top 50%
      left 50%
      width 48px
      height 48px
      margin -24px 0 0 -24px
      padding 0
      border-radius 50%
      box-sizing content-box
      border 2px solid #21B4F3
      background transparent
      outline none

      &:before
      &:after
        content ''
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        margin auto
        width 50%
        height 2px
        background-color #21B4F3

      &:after
        -webkit-transform rotate(90deg)

  .remove-photo-item
      background url("img/agenda/close-btn.png") center center no-repeat;
      -webkit-background-size contain
      -webkit-transform translate3d(0, 0, 0) scale(0)
      border none
      -webkit-transition-duration 300ms
      opacity 0
      pointer-events none
      right 0
      top 0
      width 35px
      height 35px
      padding 0
      margin-top -18px
      margin-right -18px

  .delete-mode
    .remove-photo-item
      pointer-events auto
      -webkit-transform translate3d(0, 0, 0) scale(1)
      opacity 1


.popup.preview
  text-align center
  background black

  img
    height 100%