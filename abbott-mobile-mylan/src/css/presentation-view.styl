.presentation-view
  overflow hidden

  .pv-overlay
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    z-index 3
    display none
    background-color rgba(0, 0, 0, 0.5)

    .pv-panel
      width 100%
      height 3.8em
      display -webkit-box
      -webkit-box-pack end
      -webkit-box-align center
      -webkit-box-sizing border-box
      padding 0.5em 0
      border-bottom 1px solid #ccc
      background-color white

      .ctrl-btn
        margin-right 15px

  .pv-container
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    background-color black
    cbox()

    iframe
      display block
      position relative
      width 100%
      height 100%
      border none
      background-color transparent

    .events-catcher
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 2
      background-color rgba(0, 0, 0, 0)
