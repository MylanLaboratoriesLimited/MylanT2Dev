.tour-planning,
.tour-planning-organization
  header
    .select-btn
      min-width 10em

  .col
    &:nth-of-type(1)
      width 6%
      padding 0
    &:nth-of-type(2)
      width 16%
    &:nth-of-type(3)
      width 23%
    &:nth-of-type(4)
      width 9%
    &:nth-of-type(5)
      width 16%
    &:nth-of-type(6)
      width 6%
    &:nth-of-type(7)
      width 10%
    &:nth-of-type(8)
      width 14.5%

  .thead
    input
      width 1.73333333333333em
      height 1.73333333333333em
      border-color white
      &:after
        background none !important
        -webkit-mask none
      &:checked
        background url("img/checkbox-gray.png") center center no-repeat
        background-color white
        background-size 75% 52%

    .col:nth-of-type(4)
      padding-right 3%

  .visit-order
    width 90%
    line-height 190%
    box-shadow inset 0 0 0 1px #949498
    border-radius 0.3em

  .last-call
    text-align center

  .checkbox-cell .check-box:after
    background url("img/checkbox.png") center center no-repeat;
    background-size: 100% 100%;
