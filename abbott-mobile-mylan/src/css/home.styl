.home
  overflow hidden
  header
    display -webkit-box
    height 15.625%
    -webkit-box-align center
    -webkit-box-pack justify
    padding 0 1em

  .last-sync-date
    position absolute
    right 9%
    top 7%

  .logo
    display block
    width 20.80078125%
    height initial
    -webkit-transform translate3d(0,0,0)

  .sync
    display block
    width 6%
    padding 3% 0
    background url('img/home/new/sync.png') no-repeat
    background-size contain
    -webkit-appearance none
    border none
    margin-left 14.80078125%
    outline none
    &:active
      opacity 0.8

  .hidden
  .hidden a
    display none

  nav
    height 66.6015625%
    background-color #c4e7ff

    ul
      display -webkit-box
      width 100%
      height 100%
      box-sizing border-box
      padding 0.5em

    li
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-box-flex 1

    a
      display -webkit-box
      position relative
      -webkit-box-flex 1
      background green
      border-radius 1em
      margin 0.5em
      &:active
        opacity 0.8

      &:before
        content ''
        position absolute
        bottom 38%
        left 0
        width 100%
        height 46%
        background url("img/home/new/main-icons.png") center 0 no-repeat
        background-size auto 604%
        opacity 0.9

      span
        position absolute
        top 72%
        left 0
        width 100%
        text-align center
        text-transform uppercase
        color white
        font-size 133.333333333333%
        opacity 0.9

    .contacts
      background-color #10d098
    .tour-planning
      background-color #f18d4a
      &:before
        background-position-y 60%
    .activities
      background-color #e54f96
      &:before
        background-position-y 20%
    .tots
      background-color #0fa7e9
      &:before
        background-position-y 80%
    .media
      background-color #99cc33
      &:before
        background-position-y 40%
    .organizations
      background-color #ff6666
      &:before
        background-position-y 100%

    // todo define simplier hiding of boxes
    &.show-organizations
      .third
        display -webkit-box
        .organizations
          display -webkit-box
          &:before
            height 23%
            bottom 50%
          span
            top 60%

  .dinamic-agenda
    background-color #7690c9

  footer
    height 17.7734375%
    color #6f737e

    .closest-calls
      display -webkit-box
      height 85%
      width 100%

    li
      display none
      -webkit-box-flex 1
      position relative
      padding 0 2em
      box-sizing border-box
      width 100%
      height 100%
      -webkit-box-align center
      -webkit-box-pack center
      -webkit-box-orient vertical


      &:after
        content ''
        position absolute
        top 20%
        bottom 20%
        left 100%
        width 1px
        background-color #004687

      &:before
        content ''
        display none
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background-color rgba(0, 0, 0, 0.2)
      &:active:before
        display block

      &.show
        display -webkit-box

    span
      display block

    .day
      margin 0.5em 0 0.5em 1.5em

    .name
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-line-clamp 2
      margin-bottom 0.5em
      overflow hidden
      text-transform uppercase
      font-weight 500
      wite-spase nowrap

    .bit-button-pseudo
      padding-left 1em
      margin-left 1.5em
      &:after
        position absolute
        right 100%
        bottom 50%
        width 1.5em
        height 1.5em
        -webkit-transform translate(0, 50%)

    .info
      color #030303

      .icon
        display inline-block
        background url('img/home/info.png') center center no-repeat;
        background-size 100%
        width 1.5em
        height 1.5em
        position relative
        top -0.17em
        margin-right 0.2em
        float left

      span
        font-size 14px
